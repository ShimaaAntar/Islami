<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_margin="11dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/image_hadeth"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/name_bg"
        />
    <TextView
        android:id="@+id/hadeth_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="sura el fatiha"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="3dp"
        android:textColor="@color/purple_700"
        android:fontFamily="@font/font_islami"
        app:layout_constraintTop_toTopOf="@id/image_hadeth"
        app:layout_constraintBottom_toBottomOf="@id/image_hadeth"
        app:layout_constraintStart_toStartOf="@id/image_hadeth"
        app:layout_constraintEnd_toEndOf="@id/image_hadeth"
        />

</androidx.constraintlayout.widget.ConstraintLayout>